{% extends 'IndexBundle::base.html.twig' %}

{% set title = get_page_title(room.name|default('interviews.video_conference'|trans({}, 'interviews'))) %}
{% block title %}{{ title }}{% endblock %}
{% block og_title %}{{ title }}{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/star-rating.css') }}" rel="stylesheet" type="text/css" media="screen">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/star-rating.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/autosize.js') }}" type="text/javascript"></script>
{% endblock %}

{% block content %}
    <div class="container-fluid min-full-height">
        <div class="row" style="background: var(--color-light-bg)">
            <div id="token" class="content">
                <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1 col-xs-12">
                    <div class="vertical-align-middle">
                        <div class="vertical-inner">
                            {{ form_start(form) }}
                            <fieldset class="forms-fields" style="background: white;">
                                <legend>{{ 'interviews.video_conference.quality_evaluation'|trans({}, 'interviews') }}</legend>
                                <div class="form-group col-lg-10 col-lg-offset-1 col-md-12 px-sm-0">
                                    <div class="col-xs-12">
                                        {{ form_label(form.rating, 'interviews.video_conference.quality_evaluation.rating'|trans({}, 'interviews'), { 'label_attr': { 'class': 'label-text' } }) }}
                                        {{ form_widget(form.rating) }}
                                        <span class="error text-danger small">{{ form_errors(form.rating) }}</span>
                                    </div>
                                </div>
                                <div class="form-group col-lg-10 col-lg-offset-1 col-md-12 px-sm-0">
                                    <div class="col-xs-12">
                                        {{ form_label(form.comment, 'interviews.video_conference.quality_evaluation.comment'|trans({}, 'interviews'), { 'label_attr': { 'class': 'label-text' } }) }}
                                        {{ form_widget(form.comment, { 'attr': { 'class': 'form-control', placeholder: 'interviews.video_conference.quality_evaluation.comment.placeholder'|trans({}, 'interviews') } }) }}
                                        <span class="error text-danger small">{{ form_errors(form.comment) }}</span>
                                    </div>
                                </div>
                                <div class="form-group col-lg-10 col-lg-offset-1 col-md-12 px-sm-0">
                                    <div class="col-xs-12">
                                        <button type="submit" class="btn btn-success">{{ 'base.button.submit'|trans }}</button>
                                        {{ form_widget(form.skip, { 'attr': { label: 'base.button.skip'|trans, 'class': 'btn btn-default pull-right' } }) }}
                                    </div>
                                </div>
                            </fieldset>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

